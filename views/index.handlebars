<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <div>
                <ul>
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <li>
                        {{this.burger_name}}
                        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button type="submit">Devour</button>
                        </form>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-lg-4">
            <h1>Burger</h1>
            <p>Pick a Burger, Eat a Burger</p>
            <form method="POST" action="burgers/create" class="button-size">
                <textarea type="text" name="burger_name"></textarea>
                <button type="submit">Add Burger!</button>
        </div>
        <!--next code should be the burgers that have been devoured-->
        <div class="col-lg-4">
        </div>
        <h2>Devoured Burgers</h2>
        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.burger_name}}
                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="false">
                <button type="submit">Put Back</button>
                </form>
            </li>
    
        </ul>

    </div>